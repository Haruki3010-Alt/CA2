<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>C237 Car Rental - Cart</title>
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">C237 Car Rental</a>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/rental">Back to Rental</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Cart Table -->
  <div class="container mt-4">
    <p>Welcome, <%= user.username %> (<%= user.roles %>)</p>
    <h2 class="text-center mb-4">Your Rental Cart</h2>

    <table class="table table-hover small text-center">
      <thead>
        <tr>
          <th>Car Name</th>
          <th>Image</th>
          <th>Price</th>
          <th>Quantity</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% if (cartItems.length === 0) { %>
          <tr><td colspan="5">Your cart is empty.</td></tr>
        <% } else { %>
          <% for (let i = 0; i < cartItems.length; i++) { %>
            <tr>
              <td><%= cartItems[i].name %></td>
              <td><img src="/images/<%= cartItems[i].image %>" width="20%"></td>
              <td>$<%= cartItems[i].price.toFixed(2) %></td>
              <td><%= cartItems[i].quantity %></td>
              <td>
                <form action="/cart/remove/<%= cartItems[i].carID %>" method="POST">
                  <button class="btn btn-danger btn-sm">Remove</button>
                </form>
               <form action="/cart/update/<%= cartItems[i].carID %>" method="POST" class="d-flex mt-2">
                    <input type="number" name="quantity" value="<%= cartItems[i].quantity %>" min="1" class="form-control" style="width: 70px; margin-right: 5px;">
                    <button type="submit" class="btn btn-sm btn-warning">Update</button>
                </form>
              </td>
            </tr>
          <% } %>
        <% } %>
      </tbody>
    </table>

    <% if (cartItems.length > 0) { %>
      <h4 class="text-end mt-4">Total: $
        <%= cartItems.reduce((total, item) => total + item.price * item.quantity, 0).toFixed(2) %>
      </h4>

      <div class="text-end">
        <form action="/checkout" method="POST">
          <button type="submit" class="btn btn-success mt-3">Proceed to Checkout</button>
        </form>
      </div>
    <% } %>
  </div>
</body>
</html>
